<mvc:View
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }">

    <Page
        title="{i18n>appTitle}"
        id="page">
        <content>
            <List 
			headerText="{i18n>peopleListTitle}"
			items="{people>/value}">
                <StandardListItem title="{people>UserName}" description="{people>FirstName} {people>LastName}" info="{people>Gender}"  />
            </List>
        </content>
    </Page>

</mvc:View>
